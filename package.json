{
  "name": "@lambdaschool/generator-prismatopia",
  "version": "0.0.2",
  "description": "Yeoman generator for Prismatopia",
  "homepage": "https://github.com/Lambda-School-Labs/prismatopia",
  "author": {
    "name": "Bernie Durfee",
    "email": "berniedurfee@users.noreply.github.com"
  },
  "repository": "Lambda-School-Labs/generator-prismatopia",
  "license": "MIT",
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "precoverage": "jest --showConfig",
    "coverage": "jest --coverage || true"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.1.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "yeoman-generator": "^4.5.0",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/templates/"
    ],
    "collectCoverageFrom": [
      "generators/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  }
}
